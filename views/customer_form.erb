<h1>Enter Customer Info</h1>

<form action="/shelter/add_cust_form/new" method="post">
  <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Animal Name">
  </div>

  <div class="form-group">
    <label>Phone</label>
    <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone">
  </div>

  <div class="form-group">
    <label>Animal Type Preference</label>
    <input type="text" class="form-control" id="animal_type_pref" name="animal_type_pref" placeholder="Animal Type Preference">
  </div>

  <div class="form-group">
    <label>Animal Breed Preference</label>
    <input type="text" class="form-control" id="breed_preference" name="breed_preference" placeholder="Breed Preference">
  </div>

  <button type="submit" class="btn btn-default">Enter</button>
</form>
