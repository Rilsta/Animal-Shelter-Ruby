<h1>Enter Animal Info</h1>

<form action="/shelter/add_animal_form/new" method="post">
  <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Animal Name">
  </div>

  <div class="form-group">
    <label>Gender</label>
    <input type="text" class="form-control" id="gender" name="gender" placeholder="Gender">
  </div>

  <div class="form-group">
    <label>Admittance Date (yyyy-mm-dd)</label>
    <input type="text" class="form-control" id="admittance_date" name="admittance_date" placeholder="Admittance Date">
  </div>

  <div class="form-group">
    <label>Type</label>
    <input type="text" class="form-control" id="type" name="type" placeholder="Type (ex. cat, dog, walrus etc.)">
  </div>

  <div class="form-group">
    <label>Breed</label>
    <input type="text" class="form-control" id="breed" name="breed" placeholder="Breed">
  </div>

  <button type="submit" class="btn btn-default">Enter</button>
</form>
